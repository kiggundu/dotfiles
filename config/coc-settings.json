{
    "languageserver": {
        "metals": {
            "command": "metals-vim",
            "rootPatterns": ["build.sbt"],
            "filetypes": ["scala", "sbt"]
        },

        "lean": {
            "command": "lean",
            //"rootPatterns": ["busbt"],
            "filetypes": ["lean", "sbt"]
        },    

        "flow": {
          "command": "flow",
          "args": ["lsp"],
          "filetypes": ["javascript", "javascriptreact"],
          "initializationOptions": {},
          "requireRootPattern": true,
          "settings": {},
          "rootPatterns": [".flowconfig"]
        }
        
    },

    "solargraph.useBundler": true,
    "codeLens.enable": true
}
